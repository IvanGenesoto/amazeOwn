{
  "name": "amazeown",
  "version": "1.0.0",
  "description": "A shopping simulation for people who want to own amazing things.",
  "main": "server/index.js",
  "scripts": {
    "bundle": "browserify client/index.js -o public/main.js",
    "prune": "npm prune --production",
    "prestart": "run-s bundle prune",
    "start": "node .",
    "lint": "eslint --fix .",
    "update": "ncu && ncu -u",
    "clean": "rimraf node_modules public/main.js && npm i",
    "check": "depcheck",
    "stage": "run-s lint update clean check prestart",
    "watch:server": "nodemon .",
    "watch:client": "watchify client/index.js -o public/main.js",
    "watch": "run-p watch:*",
    "kill": "pid=$(lsof -i:3000 -t); kill -TERM $pid || kill -KILL $pid",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "browserify": "^16.5.1",
    "depcheck": "^0.9.2",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "htmlhint": "^0.14.1",
    "nodemon": "^2.0.4",
    "npm-check-updates": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "watchify": "^3.11.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanGenesoto/amazeown.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IvanGenesoto/amazeown/issues"
  },
  "homepage": "https://github.com/IvanGenesoto/amazeown#readme"
}
