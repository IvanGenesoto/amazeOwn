{
  "name": "amazeown",
  "version": "1.0.0",
  "description": "A shopping site for people who want to own amazing things.",
  "main": "server/index.js",
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.3.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "htmlhint": "^0.12.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^16.0.0",
    "watchify": "^3.11.1"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "clean": "rimraf server/public",
    "copy": "copyfiles \"images/**\" index.html styles.css server/public",
    "bundle": "browserify client/index.js -o server/public/main.js",
    "build": "npm-run-all -p lint clean -p copy bundle",
    "prestart": "npm run build",
    "start": "node .",
    "start:prod": "node .",
    "watch:server": "nodemon .",
    "watch:client": "watchify client/index.js -o server/public/main.js",
    "prewatch": "npm-run-all -p lint clean -s copy",
    "watch": "run-p watch:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanGenesoto/amazeown.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IvanGenesoto/amazeown/issues"
  },
  "homepage": "https://github.com/IvanGenesoto/amazeown#readme"
}
