{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "stage",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "npm: stage",
      "program": "${workspaceFolder}/server/index.js",
      "postDebugTask": "npm: install"
    },
    {
      "name": "debug",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "npm: bundle",
      "program": "${workspaceFolder}/server/index.js"
    },
    {
      "name": "watch",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: watch",
      "program": "${workspaceFolder}/server/index.js"
    },
    {
      "name": "kill",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: kill",
      "program": "${workspaceFolder}/server/data.js"
    },
  ]
}