{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "watch",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: watch",
      "program": "${workspaceFolder}/server/index.js"
    },
    {
      "name": "debug",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "npm: bundle",
      "program": "${workspaceFolder}/server/index.js"
    },
    {
      "name": "stage",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "env": {"NODE_ENV": "production"},
      "preLaunchTask": "npm: stage",
      "program": "${workspaceFolder}/server/index.js",
      "postDebugTask": "npm: install"
    }
  ]
}